@model Bee_Shop.Models.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "➕ Thêm Danh Mục Cha";
}

<h2>➕ Thêm Danh Mục Cha</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="CategoryName">Thêm danh mục cha</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryPosition">Thêm vị trí</label>
        <input asp-for="CategoryPosition" type="number" class="form-control" />
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-warning" href="/Admin/Category">⬅️ Quay lại</a>
        <button type="submit" class="btn btn-success">➕ Thêm</button>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
