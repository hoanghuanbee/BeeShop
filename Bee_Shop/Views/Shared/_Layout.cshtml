@* /Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/public/css/theme.css" />
</head>
<body>
    @await Html.PartialAsync("_Header")
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_Footer")
</body>
</html>
