@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Gửi lại xác nhận</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.css" />
</head>
<body>
    <div class="container mt-5">
        <h3 class="text-center mb-4">Gửi lại email xác nhận</h3>

        <form asp-action="ResendConfirmation" method="post" class="w-50 mx-auto">
            <div class="form-group mb-3">
                <label>Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Gửi lại xác nhận</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3 text-center">
                @ViewBag.Message
            </div>
        }

        <div class="text-center mt-3">
            <a asp-action="Login">⬅ Quay về đăng nhập</a>
        </div>
    </div>
</body>
</html>
