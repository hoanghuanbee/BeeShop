@model Bee_Shop.Models.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "➕ Thêm Danh Mục Con";
}

<h2>➕ Thêm Danh Mục Con</h2>

<form asp-action="CreateChild" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group mb-3">
        <label asp-for="CategoryName">Thêm danh mục con</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SupplyId">Danh mục cha</label>

        @if (ViewBag.TenDanhMucChaMacDinh != null)
        {
            <div class="alert alert-info mb-2">
                Mặc định đang thêm vào: <strong>@ViewBag.TenDanhMucChaMacDinh</strong>
                (Bạn có thể chọn danh mục cha khác nếu muốn)
            </div>
        }

        <select asp-for="SupplyId" asp-items="ViewBag.DanhMucCha" class="form-select">
            <option value="">-- Chọn danh mục cha --</option>
        </select>

        <span asp-validation-for="SupplyId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryPosition">Thêm vị trí</label>
        <input asp-for="CategoryPosition" type="number" class="form-control" />
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-warning" href="/Admin/Category">⬅️ Quay lại</a>
        <button type="submit" class="btn btn-success">➕ Thêm</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
